<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="product.Id" />
    <dl class="dl-horizontal">
        <dd><label asp-for="product.Name"></label></dd>
        <dt>
            <input asp-for="product.Name" class="form-control" />
            <span asp-validation-for="product.Name"></span>
        </dt>
        <dd><label asp-for="product.Discribtion"></label></dd>
        <dt>
            <textarea asp-for="product.Discribtion" class="form-control"></textarea>
            <span asp-validation-for="product.Discribtion"></span>
        </dt>
        <dd><label asp-for="product.Price"></label></dd>
        <dt>
            <input asp-for="product.Price" class="form-control" />
            <span asp-validation-for="product.Price"></span>
        </dt>
        <dd><label asp-for="product.QuintityStock"></label></dd>
        <dt>
            <input asp-for="product.QuintityStock" class="form-control" />
            <span asp-validation-for="product.QuintityStock"></span>
        </dt>
        <dd><label asp-for="product.Picture"></label></dd>
        <dt>
            <input asp-for="product.Picture" />
            <span asp-validation-for="product.Picture"></span>
        </dt>
        <dd></dd>
        <dt>
            <input type="submit" class="btn btn-success" value="ثبت" />
